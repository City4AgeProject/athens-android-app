<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:paddingBottom="3dp"
    android:paddingTop="3dp" >

    <!--<ImageView-->
        <!--android:id="@+id/weatherStatus"-->
        <!--android:layout_width="50dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:padding="0dp"-->
        <!--android:src="@drawable/questionmark"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/distanceView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="8dp"
        android:textStyle="bold"
        android:textColor="#ff8eb2c3" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/distanceView">

        <TableRow
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="00.0"
                android:id="@+id/avSpeedView"
                android:textStyle="bold"
                android:textColor="#ff000000"
                android:textSize="35dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="00.0"
                android:id="@+id/maxSpeedView"
                android:textStyle="bold"
                android:textColor="#ff000000"
                android:textSize="35dp"
                android:layout_gravity="center" />
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/av_speed_lbl"
                android:id="@+id/avSpeedLblView"
                android:textColor="#ff8eb2c3"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/max_speed_lbl"
                android:id="@+id/maxSpeedLblView"
                android:textColor="#ff8eb2c3"
                android:textStyle="bold" />

        </TableRow>
    </TableLayout>

</RelativeLayout>
